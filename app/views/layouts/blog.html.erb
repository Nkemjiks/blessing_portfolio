<!DOCTYPE html>
<html>
  <head>
    <title><%= @page_title %></title>
    <meta name="keywords" content="<%= @seo_keywords %>" />
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'blogs', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <p class="notice"><%= notice %></p>
    <p class="alert"><%= alert %></p>

    <% if current_user.is_a? User %>
      <%= link_to  "Logout", destroy_user_session_path, method: :delete %>
    <% else %>
      <%= link_to "Log in", new_user_session_path %><br />
      <%= link_to "Sign up", new_user_registration_path %><br />
    <% end %>

    <%= yield %>

    <div>
      <%= link_to "Home", root_path %><br />
      <%= link_to "About", about_me_path %><br />
      <%= link_to "Contact me", contact_path %><br />
      <%= link_to "Blogs", blogs_path %><br />
      <%= link_to "Portfolio", portfolios_path %><br />
    </div>

    <% if session[:source] %>
      <p>Thanks for visiting me from <%= session[:source] %></p>
    <% end %>

  </body>
</html>
