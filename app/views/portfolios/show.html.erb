<div class="album py-5 bg-light">
  <div class="container">
    <div class="row">
      <div class="col-md-7">
        <%= image_tag portfolio_img(@portfolio_item.main_image.url, 'main'), width: '100%' %>
      </div>
      <div class="col-md-5">
        <h3><%= @portfolio_item.title %></h3>
        <hr>
        <p><em><%= @portfolio_item.subtitle %></em></p>
        <p><%= @portfolio_item.body %></p>
        <hr>
        <h4>Technologies used:</h4>
        <% @portfolio_item.technologies.each do |tech| %>
          <p><%= tech.name %></p>
        <% end %>

        <br>
        <% if logged_in?(:site_admin) %>
          <%= link_to 'Edit', edit_portfolio_path(@portfolio_item), class: 'btn btn-warning'  %>
          <%= link_to 'Delete', portfolio_path(@portfolio_item), method: :delete, data: { confirm: "Are you sure?" }, class: 'btn btn-danger' %>
        <% end %>
      </div>
    </div>
  </div>
</div>