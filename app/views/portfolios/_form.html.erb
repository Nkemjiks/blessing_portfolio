<%= form_with(model: portfolio_item, local: true) do |form| %>
  <% if portfolio_item.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(portfolio_item.errors.count, "error") %> prohibited this portfolio from being saved:</h2>

      <ul>
        <% portfolio_item.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <div class="row">
    <div class="col-md-6">
      <div class="field form-group">
        <%= form.label :title %>
        <%= form.text_field :title, class: "form-control" %>
      </div>

      <div class="field form-group">
        <%= form.label :subtitle %>
        <%= form.text_field :subtitle, class: "form-control" %>
      </div>

      <div class="field form-group">
        <%= form.label :main_image %>
        <%= form.text_field :main_image, class: "form-control" %>
      </div>

      <div class="field form-group">
        <%= form.label :thumb_image %>
        <%= form.text_field :thumb_image, class: "form-control" %>
      </div>
    </div>

    <div class="col-md-6">
      <div class="field form-group">
        <%= form.label :body %>
        <%= form.text_area :body, class: "form-control", rows: 15 %>
      </div>
    </div>

    <hr>
    <div class="col-md-12">
      <h2>Technologies used</h2>
      <div class="field form-group">
        <%= form.fields_for :technologies do |tech_form| %>
          <%= tech_form.label :name %>
          <%= tech_form.text_field :name, class: "form-control" %>
        <% end %>
      </div>

      <div class="actions">
        <%= form.submit class: "btn btn-primary btn-block" %>
      </div>
    </div>
  </div>

<% end %>
